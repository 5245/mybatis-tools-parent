<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
	<!-- 引入配置文件 -->
	<properties resource="mybatis-generator-flow.properties" />

	<!-- 指定数据连接驱动jar地址 -->
	<classPathEntry location="./src/lib/mysql-connector-java-5.1.39-bin.jar" />


	<!-- 一个数据库一个context -->
	<context id="wp4show" targetRuntime="MyBatis3">

		<!-- 插件start... -->

		<plugin type="com.mybatis.plugin.PaginationPlugin"></plugin>
		<plugin type="com.mybatis.plugin.DeleteLogicByIdsPlugin"></plugin>
		
		<!-- <plugin type="org.mybatis.generator.plugins.ToStringPlugin"></plugin> -->

		<plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
			<property name="searchString" value="Example$" />
			<property name="replaceString" value="Page" />
		</plugin>
		<!-- 插件end... -->


		<!-- 注释 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" /><!-- 是否取消注释 -->
			<property name="suppressDate" value="false" /> <!-- 是否生成注释代时间戳 -->
		</commentGenerator>

		<!-- jdbc连接 -->
		<jdbcConnection driverClass="${jdbc.driver}"
			connectionURL="${jdbc.url}" userId="${jdbc.username}" password="${jdbc.password}" />

		<!-- 类型转换 -->
		<javaTypeResolver>
			<!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） -->
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- 生成实体类地址 -->
		<javaModelGenerator targetPackage="${modelTargetPackage}"
			targetProject="./src/main/java">
			<!-- 是否在当前路径下新加一层schema,eg：fase路径com.sxk.model， true:com.sxk.model.[schemaName] -->
			<property name="enableSubPackages" value="false" />
			<!-- 是否针对string类型的字段在set的时候进行trim调用 -->
			<property name="trimStrings" value="false" />
		</javaModelGenerator>

		<!-- 生成mapxml文件 -->
		<sqlMapGenerator targetPackage="${sqlMapperTargetPackage}"
			targetProject="./src/main/resources">
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>

		<!-- 生成mapxml对应client，也就是接口dao -->
		<javaClientGenerator targetPackage="${daoTargetPackage}"
			targetProject="./src/main/java" type="XMLMAPPER">
			<property name="enableSubPackages" value="false" />
		</javaClientGenerator>
		<!-- 配置表信息 -->
		<table schema="${jdbc.user}" tableName="sale_channel"
			domainObjectName="SaleChannel" enableCountByExample="false"
			enableUpdateByExample="false" enableDeleteByExample="false"
			enableSelectByExample="false" selectByExampleQueryId="false">

			<!-- schema即为数据库名 tableName为对应的数据库表 domainObjectName是要生成的实体类 enable*ByExample 
				是否生成 example类 -->

			<!-- 忽略列，不生成bean 字段 -->
			<!-- <ignoreColumn column="district_id_other" /> -->
			<!-- 指定列的java数据类型 -->
			<!-- <columnOverride column="district_id" jdbcType="VARCHAR" /> -->

		</table>

		<table tableName="sale_channel_category" domainObjectName="SaleChannelCategory"
			enableCountByExample="false" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="false"
			selectByExampleQueryId="false">
		</table>
		
		<table tableName="purchaser" domainObjectName="Purchaser"
			enableCountByExample="false" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="false"
			selectByExampleQueryId="false">
		</table>
		
		<table tableName="sys_admin" domainObjectName="SysAdmin"
			enableCountByExample="false" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="false"
			selectByExampleQueryId="false">
		</table>
		
		<table tableName="order_info" domainObjectName="OrderInfo"
			enableCountByExample="false" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="false"
			selectByExampleQueryId="false">
		</table>

	</context>
</generatorConfiguration>